<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".todo.TodoFragment">

    <View
        android:id="@+id/view_1"
        style="@style/ViewStyles"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="200dp"
        android:layout_height="180dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_1">

        <ImageView
            android:src="@drawable/ic_person"
            android:background="@drawable/circle_background"
            android:id="@+id/person_image"
            android:layout_marginBottom="50dp"
            style="@style/ImageForTodo"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/person_task_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Персональные"
            app:layout_constraintTop_toBottomOf="@id/person_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/person_task_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/person_task_title"
            android:text="14 tasks"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <View
            android:id="@+id/more_1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_more"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="200dp"
        android:layout_height="180dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_1">

        <ImageView
            android:src="@drawable/ic_work"
            android:background="@drawable/work_background"
            android:id="@+id/work_image"
            android:layout_marginBottom="50dp"
            style="@style/ImageForTodo"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/work_task_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Работа"
            app:layout_constraintTop_toBottomOf="@id/work_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/work_task_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/work_task_title"
            android:text="212 tasks"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <View
            android:id="@+id/more_2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_more"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <View
        android:id="@+id/view_2"
        style="@style/ViewStyles"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="180dp"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="200dp"
        android:layout_height="180dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_2">

        <ImageView
            android:src="@drawable/ic_meet"
            android:background="@drawable/meet_background"
            android:id="@+id/meet_image"
            android:layout_marginBottom="50dp"
            style="@style/ImageForTodo"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/meet_task_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Встречи"
            app:layout_constraintTop_toBottomOf="@id/meet_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/meet_task_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/meet_task_title"
            android:text="14 tasks"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <View
            android:id="@+id/more_3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_more"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"/>



    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="200dp"
        android:layout_height="180dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_2">

        <ImageView
            android:src="@drawable/ic_home"
            android:background="@drawable/home_background"
            android:id="@+id/home_image"
            android:layout_marginBottom="50dp"
            style="@style/ImageForTodo"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/home_task_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Дом"
            app:layout_constraintTop_toBottomOf="@id/home_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/home_task_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/home_task_title"
            android:text="6 tasks"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <View
            android:id="@+id/more_4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_more"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <View
        android:id="@+id/view_3"
        style="@style/ViewStyles"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="365dp"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="200dp"
        android:layout_height="180dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_3">

        <ImageView
            android:src="@drawable/ic_lock"
            android:background="@drawable/private_background"
            android:id="@+id/private_image"
            android:layout_marginBottom="50dp"
            style="@style/ImageForTodo"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/private_task_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Частное"
            app:layout_constraintTop_toBottomOf="@id/private_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/private_task_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/private_task_title"
            android:text="10 tasks"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <View
            android:id="@+id/more_5"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_more"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="200dp"
        android:layout_height="180dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/view_3">

        <ImageView
            android:src="@drawable/ic_add"
            android:background="@drawable/add_background"
            android:id="@+id/add_image"
            android:layout_marginBottom="50dp"
            style="@style/ImageForTodo"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/add_task_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Добавить новый"
            app:layout_constraintTop_toBottomOf="@id/add_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/add_task_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/add_task_title"
            android:text=""
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <View
            android:visibility="gone"
            android:id="@+id/more_6"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_more"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>