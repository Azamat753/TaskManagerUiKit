<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:background="@color/royalEnd"
        android:padding="16dp">

        <EditText
            android:id="@+id/spending_name_edt"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="16dp"
            android:inputType="textCapSentences"
            android:background="@drawable/rounded_rec8"
            android:hint="Введите название"
            android:padding="8dp"
            style="@style/financeText"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Выберите картинку:"
            style="@style/financeText"
            android:layout_marginTop="8dp"
            android:layout_marginStart="5dp"
            android:id="@+id/pick_the_image"
            app:layout_constraintStart_toStartOf="@id/spending_name_edt"
            app:layout_constraintTop_toBottomOf="@id/spending_name_edt" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/frequent_dialog_recycler"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="4"
            app:layout_constraintTop_toBottomOf="@id/pick_the_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ok"
            android:id="@+id/ok_tv"
            style="@style/financeText"
            app:layout_constraintTop_toBottomOf="@id/frequent_dialog_recycler"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:padding="20dp"
            app:layout_constraintEnd_toEndOf="@id/spending_name_edt"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Отмена"
            android:id="@+id/cancel_tv"
            style="@style/financeText"
            android:padding="20dp"
            app:layout_constraintTop_toBottomOf="@id/frequent_dialog_recycler"
            app:layout_constraintStart_toStartOf="@id/spending_name_edt"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/mipmap_logo_1_3"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>