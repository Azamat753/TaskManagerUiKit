<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tasksPage.homeTask.HomeActivity">

    <include
        android:id="@+id/home_toolbar"
        layout="@layout/personal_tool_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_home"
        android:overScrollMode="never"

        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/awesomeTextInputLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_toolbar" />

    <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
        android:id="@+id/awesomeTextInputLayout2"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:padding="16dp"
        android:layout_marginBottom="20dp"
        app:borderColor="#00BCD4"
        app:borderWidth="2dp"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@+id/editText_home"
            android:layout_width="230dp"
            android:inputType="textCapSentences"
            android:textColorHint="#FFF"
            android:textColor="#FFF"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:hint="@string/tasks" />
    </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>

    <ImageView
        android:id="@+id/add_task_home"
        android:textColorHint="#FFF"
        android:textColor="#FFF"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="30dp"
        app:srcCompat="@drawable/ic_send"
        android:onClick="addHomeTask"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>