<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".utils.PassCodeActivity">

    <ImageView
        android:id="@+id/image_icon"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:background="@drawable/private_background"
        android:src="@drawable/ic_lock"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Создание пароля"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_alignTop="@id/image_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:textSize="40sp"/>

    <com.hanks.passcodeview.PasscodeView
        android:id="@+id/passcode_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/holo_blue_light"
        android:visibility="gone"
        app:correctStateColor="@android:color/holo_green_light"
        app:numberTextColor="@android:color/darker_gray"
        app:wrongStateColor="@android:color/holo_red_light" />

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="100dp"
        android:maxLength="4"
        android:hint="4 цифры"
        android:inputType="numberPassword"
        android:textColor="@android:color/holo_green_light"
        android:textSize="40sp" />

    <Button
        android:id="@+id/ok_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/edit_password"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="100dp"
        android:onClick="saveBtn"
        android:maxLength="4"
        android:text="Сохранить"
        android:textSize="30sp" />

</RelativeLayout>