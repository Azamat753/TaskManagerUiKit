<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_left_arrow_black" />

            <ImageView
                android:id="@+id/personal_circle_image"
                android:layout_width="11dp"
                android:layout_height="15dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/circle_background" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/purple_circle_image"
                android:layout_width="11dp"
                android:layout_height="15dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/purple_circle" />
            <ImageView
                android:visibility="gone"
                android:id="@+id/orange_circle_image"
                android:layout_width="11dp"
                android:layout_height="15dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/meet_background" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/blue_circle_image"
                android:layout_width="11dp"
                android:layout_height="15dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/home_background" />

            <ImageView
                android:visibility="gone"
                android:id="@+id/red_circle_image"
                android:layout_width="11dp"
                android:layout_height="15dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/private_background" />

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:text="Персональные"
                android:textColor="@android:color/black"
                android:textSize="23dp"
                android:textStyle="bold" />

        </LinearLayout>
    </RelativeLayout>
</androidx.appcompat.widget.Toolbar>