<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/royalEnd"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dialog_habit_container"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/habit_textInputLayout_title"
        android:background="@drawable/todo_background">

        <TextView
            android:id="@+id/dialog_example_tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextTitleQuick2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/dialog_example_progress"
            tools:text="Example"/>
        <ImageView
            android:id="@+id/dialog_example_progress"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/circle_progress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <ImageView
            android:id="@+id/dialog_example_img"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <TextView
            android:id="@+id/dialog_example_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="0/10"
            style="@style/todoAmountTextColor2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialog_example_progress"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/habit_textInputLayout_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="@string/add_title"
        app:hintTextColor="#00BCD4"
        android:textColorHint="@color/hint_color"
        app:boxStrokeColor="#00BCD4"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:layout_constraintBottom_toTopOf="@+id/habit_textInputLayout_day"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/dialog_habit_container"
        app:layout_constraintStart_toEndOf="@+id/dialog_habit_container">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dialog_habit_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:maxLength="26"
            android:textAlignment="inherit"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:textColor="@color/myWhite"
            android:inputType="textCapSentences"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/habit_textInputLayout_day"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="@string/day_amount"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        app:hintTextColor="#00BCD4"
        android:textColorHint="@color/hint_color"
        app:boxStrokeColor="#00BCD4"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:layout_constraintStart_toEndOf="@+id/dialog_habit_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/habit_textInputLayout_title"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_habit_container">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dialog_habit_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="26"
            android:paddingBottom="5dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:textColor="@color/myWhite"
            android:inputType="number"/>
    </com.google.android.material.textfield.TextInputLayout>



    <TextView
        android:id="@+id/dialog_habit_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        style="@style/TextTitleQuick"
        app:layout_constraintTop_toBottomOf="@+id/dialog_habit_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/add_icon"/>

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:id="@+id/dialog_habit_gvcontainer"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_habit_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <GridView
            android:id="@+id/dialog_habit_gridView"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:verticalSpacing="10dp"
            android:horizontalSpacing="2dp"
            android:layout_gravity="center"
            android:columnWidth="50dp"
            android:numColumns="4"
            android:stretchMode="spacingWidth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_habit_gvcontainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/dialog_habit_cancel"
            android:textColor="@color/myWhite"
            android:layout_margin="10dp"
            android:text="@string/Cancel"
            android:background="@drawable/bg_button_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/dialog_habit_ok"
            android:textColor="@color/myWhite"
            android:layout_margin="10dp"
            android:text="ok"
            android:background="@drawable/bg_button_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>