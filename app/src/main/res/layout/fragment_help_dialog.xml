<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".utils.financeDialog.AdviceDialog">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/royalEnd"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
           android:gravity="center"
            android:background="@color/royalStart">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ПОМОЩЬ"
                android:textColor="@color/white"
                android:textSize="24sp"/>
        </LinearLayout>
        <ScrollView
            android:layout_width="320dp"
            android:layout_height="500dp"
            android:padding="8dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                 android:textColor="@color/myWhite"
                android:text="@string/helper_finance_dialog"
                />
        </ScrollView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Понятно"
            android:id="@+id/ok_tv_advice"
            style="@style/financeText"
            android:layout_gravity="end"
            android:padding="20dp"/>
    </LinearLayout>

</LinearLayout>