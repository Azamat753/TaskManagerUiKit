<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <CheckBox
        android:id="@+id/work_task_check"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/work_task_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Text"
        app:layout_constraintTop_toTopOf="@+id/work_task_check"
        app:layout_constraintBottom_toBottomOf="@+id/work_task_check"
        app:layout_constraintStart_toEndOf="@+id/work_task_check"
        style="@style/todoTextColor"
        android:textSize="20sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>