<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".main.HelpFragment">

   <pl.droidsonroids.gif.GifImageView
       android:id="@+id/fragment_help_gif_change"
       android:layout_width="150dp"
       android:layout_height="300dp"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:src="@drawable/change_gif"/>
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/fragment_help_gif_move"
        android:layout_width="150dp"
        android:layout_height="300dp"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/move_gif"/>
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/fragment_help_gif_delete"
        android:layout_width="150dp"
        android:layout_height="300dp"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/delete_gif"/>
    <TextView
        android:id="@+id/fragment_help_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/fragment_help_gif_change"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/myWhite"
        android:text="@string/helper_dialog_text"/>


</androidx.constraintlayout.widget.ConstraintLayout>